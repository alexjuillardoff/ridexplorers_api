{
  "openapi": "3.0.0",
  "info": {
    "title": "RIDEXPLORERS API",
    "version": "1.0.0",
    "description": "API providing data about roller coasters and theme parks"
  },
  "servers": [
    { "url": "/" }
  ],
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "security": [
    { "basicAuth": [] }
  ],
  "paths": {
    "/api/coasters": {
      "get": {
        "summary": "List coasters",
        "parameters": [
          {"name": "offset", "in": "query", "schema": {"type": "integer"}},
          {"name": "limit", "in": "query", "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "Paginated coasters"}}
      }
    },
    "/api/coasters/{id}": {
      "get": {
        "summary": "Get coaster by id",
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "Coaster"}, "404": {"description": "Not found"}}
      }
    },
    "/api/random-coasters": {
      "get": {"summary": "Random coasters list", "responses": {"200": {"description": "List of random coasters"}}}
    },
    "/api/coasters/search": {
      "get": {
        "summary": "Search coasters",
        "parameters": [{"name": "q", "in": "query", "required": true, "schema": {"type": "string"}}],
        "responses": {"200": {"description": "Search result"}}
      }
    },
    "/api/theme-parks": {
      "get": {
        "summary": "List theme parks",
        "parameters": [
          {"name": "offset", "in": "query", "schema": {"type": "integer"}},
          {"name": "limit", "in": "query", "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "Paginated theme parks"}}
      }
    },
    "/api/theme-parks/{id}": {
      "get": {
        "summary": "Get theme park by id",
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {"200": {"description": "Theme park"}, "400": {"description": "Not found"}}
      }
    },
    "/scrape/start": {
      "get": {
        "summary": "Start scraping script",
        "parameters": [{"name": "script", "in": "query", "required": true, "schema": {"type": "string"}}],
        "responses": {"200": {"description": "Scraping started"}, "400": {"description": "Error"}}
      }
    },
    "/scrape/cancel": {
      "post": {
        "summary": "Cancel scraping task",
        "responses": {"200": {"description": "Scraping cancelled"}}
      }
    },
    "/scrape/files": {
      "get": {"summary": "List scraped files", "responses": {"200": {"description": "Files list"}}}
    },
    "/scrape/files/{name}": {
      "get": {
        "summary": "Get scraped file",
        "parameters": [{"name": "name", "in": "path", "required": true, "schema": {"type": "string"}}],
        "responses": {"200": {"description": "File content"}, "404": {"description": "Not found"}}
      }
    },
    "/scrape/upload": {
      "post": {
        "summary": "Upload JSON file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {"type": "string", "format": "binary"}
                }
              }
            }
          }
        },
        "responses": {"200": {"description": "File uploaded"}, "400": {"description": "Error"}}
      }
    },
    "/scrape/tasks": {
      "get": {"summary": "List scraping tasks", "responses": {"200": {"description": "Tasks"}}}
    },
    "/scrape/logs": {
      "get": {
        "summary": "Retrieve scraping logs",
        "parameters": [{"name": "id", "in": "query", "schema": {"type": "integer"}}],
        "responses": {"200": {"description": "Logs"}}
      }
    }
  }
}
